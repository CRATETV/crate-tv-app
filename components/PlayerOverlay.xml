<?xml version="1.0" encoding="utf-8" ?>
<component name="PlayerOverlay" extends="Group">
    <script type="text/brightscript" uri="pkg:/components/PlayerOverlay.brs" />
    <interface>
        <field id="content" type="node" onChange="onContentSet" />
    </interface>
    <children>
        <Video id="video" width="1920" height="1080" />
        
        <!-- PAUSE OVERLAY (Actors Info) -->
        <Group id="overlay" visible="false">
            <Rectangle width="1920" height="1080" color="#000000" opacity="0.8" />
            
            <Label id="title" translation="[100, 100]" color="#FFF"><Font role="font" uri="pkg:/fonts/Bold.ttf" size="60"/></Label>
            
            <Label text="CAST" translation="[100, 250]" color="#AAA"><Font role="font" uri="pkg:/fonts/Bold.ttf" size="30"/></Label>
            
            <!-- Simple Actor List -->
            <Label id="actorList" translation="[100, 300]" width="1700" wrap="true" color="#FFF"><Font role="font" uri="pkg:/fonts/Regular.ttf" size="30"/></Label>
        </Group>
    </children>
</component>