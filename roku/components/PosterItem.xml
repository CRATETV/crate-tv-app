<?xml version="1.0" encoding="utf-8" ?>
<component name="PosterItem" extends="Group">
    <interface>
        <field id="itemContent" type="node" onChange="onContentChanged" />
        <field id="width" type="float" />
        <field id="height" type="float" />
        <field id="rowFocusPercent" type="float" onChange="onFocusPercentChanged" />
    </interface>

    <script type="text/brightscript" uri="pkg:/components/PosterItem.brs" />

    <children>
        <!-- Top 10 Rank Number Layout -->
        <LayoutGroup id="rankGroup" visible="false" layoutDirection="horiz" translation="[0, 60]">
            <Rectangle width="120" height="200" color="#00000000">
                <Label id="rankOutline" width="120" horizAlign="right" font="font:BoldSystemFont" size="130" color="#FFD700" translation="[-4, 0]" />
                <Label id="rankFill" width="120" horizAlign="right" font="font:BoldSystemFont" size="130" color="#141414" translation="[0, 0]" />
            </Rectangle>
        </LayoutGroup>

        <!-- Poster with Load Optimizations -->
        <Poster 
            id="poster" 
            width="200" 
            height="300" 
            loadDisplayMode="scaleToZoom" 
            loadWidth="200" 
            loadHeight="300" />

        <!-- White Focus Ring -->
        <Rectangle 
            id="focusRing" 
            width="210" 
            height="310" 
            translation="[-5, -5]" 
            color="#FFFFFF" 
            fill="false" 
            opacity="0" 
            stroke="4" />
    </children>
</component>