<?xml version="1.0" encoding="utf-8" ?>
<component name="MoviePoster" extends="Group">

    <script type="text/brightscript" uri="pkg:/components/MoviePoster.brs" />

    <interface>
        <field id="itemContent" type="node" onChange="onContentChange" />
        <field id="focusPercent" type="float" onChange="onFocusChange" />
    </interface>

    <children>
        <!-- CRATE RED FOCUS BORDER -->
        <Rectangle 
            id="focusRing"
            color="0xEF4444FF"
            width="252"
            height="372"
            translation="[-6, -6]"
            visible="false"
        />
        
        <Poster 
            id="tilePoster"
            width="240"
            height="360"
            loadDisplayMode="scaleToFill"
        />

        <Label
            id="titleLabel"
            width="240"
            translation="[0, 370]"
            font="font:ExtraSmallBoldSystemFont"
            color="0x888888FF"
            visible="false"
        />
    </children>

</component>