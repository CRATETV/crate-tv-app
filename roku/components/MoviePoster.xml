<?xml version="1.0" encoding="utf-8" ?>
<component name="MoviePoster" extends="Group">

    <script type="text/brightscript" uri="pkg:/components/MoviePoster.brs" />

    <interface>
        <!-- The content for this tile, passed from the RowList -->
        <field id="itemContent" type="node" onChange="onContentChange" />
        <!-- The focus state of the tile -->
        <field id="focusPercent" type="float" onChange="onFocusChange" />
    </interface>

    <children>
        <!-- The focus border, initially invisible -->
        <Rectangle 
            id="focusRing"
            color="0xFFFFFFFF"
            width="252"
            height="372"
            translation="[-6, -6]"
            visible="false"
        />
        
        <!-- The movie poster image -->
        <Poster 
            id="tilePoster"
            width="240"
            height="360"
        />

        <!-- Watched Badge -->
        <Group id="watchedBadge" visible="false">
            <Rectangle
                width="80"
                height="30"
                color="0xAA0000B0" 
                translation="[5, 5]"
            >
                <Label
                    text="WATCHED"
                    width="80"
                    height="30"
                    color="0xFFFFFFFF"
                    font="font:ExtraSmallBoldSystemFont"
                    horizAlign="center"
                    vertAlign="center"
                />
            </Rectangle>
        </Group>
    </children>

</component>