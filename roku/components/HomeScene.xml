<?xml version="1.0" encoding="utf-8" ?>
<component name="HomeScene" extends="Scene">

    <script type="text/brightscript" uri="pkg:/components/HomeScene.brs" />

    <children>
        <!-- Loading indicator -->
        <Label 
            id="loadingLabel"
            text="Loading Crate TV..."
            translation="[960, 540]"
            horizAlign="center"
            vertAlign="center"
            color="0xFFFFFFFF"
        >
            <font role="sans" size="30"/>
        </Label>
        
        <!-- Main content group, initially hidden -->
        <Group id="contentGroup" visible="false">
            <!-- Hero Section -->
            <Group id="heroGroup">
                <Poster id="heroBackground" width="1920" height="1080" />
                <Rectangle id="heroGradient" color="0x000000AA" width="1280" height="1080" />
                <Label 
                    id="heroTitle"
                    width="880"
                    wrap="true"
                    translation="[80, 250]"
                    font="font:LargeBoldSystemFont"
                />
                <Label
                    id="heroDescription"
                    width="880"
                    wrap="true"
                    maxLines="3"
                    translation="[80, 320]"
                    font="font:SmallSystemFont"
                />
                 <ButtonGroup 
                    id="heroButtons" 
                    translation="[80, 450]" 
                    layoutDirection="horiz" 
                    itemSpacing="[20, 0]" 
                    buttons='["Play", "More Info"]'
                />
            </Group>

            <!-- Movie Carousels -->
            <RowList 
                id="categoryRowList"
                translation="[80, 750]"
                itemComponentName="MoviePoster"
                itemSize="[240, 360]"
                rowItemSpacing="[ [30, 0] ]"
                numRows="1"
                rowHeights="[360]"
                rowLabelOffset="[ [0, -50] ]"
                rowFocusAnimationStyle="floatingFocus"
            />
        </Group>

        <!-- Task node for fetching data -->
        <Task id="contentTask" uri="pkg:/components/ContentTask.xml" />
    </children>

</component>