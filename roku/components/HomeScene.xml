<?xml version="1.0" encoding="utf-8" ?>
<component name="HomeScene" extends="Scene">

    <script type="text/brightscript" uri="pkg:/components/HomeScene.brs" />

    <children>
        <!-- Loading indicator -->
        <Label 
            id="loadingLabel"
            text="Loading Crate TV..."
            translation="[960, 540]"
            horizAlign="center"
            vertAlign="center"
            color="0xFFFFFFFF"
        >
            <font role="sans" size="30"/>
        </Label>
        
        <!-- Main content grid, initially hidden -->
        <PosterGrid
            id="filmGrid"
            basePosterSize="[240, 360]"
            caption1NumLines="1"
            numColumns="6"
            itemSpacing="[30, 30]"
            translation="[80, 150]"
            visible="false"
        />

    </children>

</component>