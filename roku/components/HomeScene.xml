<?xml version="1.0" encoding="utf-8" ?>
<component name="HomeScene" extends="Group">
    <script type="text/brightscript" uri="pkg:/components/HomeScene.brs" />
    <children>
        <!-- HERO SECTION -->
        <Group id="hero">
            <Poster 
                id="heroImage" 
                width="1920" 
                height="800" 
                loadDisplayMode="scaleToFill" 
            />
            
            <!-- Side Legibility Film (Darkens text area) -->
            <Rectangle 
                width="1200" 
                height="800" 
                color="0x050505FF" 
                gradientDirection="left-to-right" 
                endColor="0x00000000" 
            />
            
            <!-- Bottom Legibility Film (Blends Hero into Rows) -->
            <Rectangle 
                width="1920" 
                height="400" 
                translation="[0, 400]"
                color="0x050505FF" 
                gradientDirection="bottom-to-top" 
                endColor="0x00000000" 
            />

            <Group id="heroContent" translation="[100, 150]">
                <Label id="heroBadge" text="SPOTLIGHT SELECTION" font="font:SmallestBoldSystemFont" color="0xEF4444FF" />
                <Label id="heroTitle" translation="[0, 40]" width="1000" wrap="true" color="0xFFFFFFFF">
                    <font role="sans" size="90" weight="bold" />
                </Label>
                <Label id="heroSynopsis" translation="[0, 160]" width="800" wrap="true" maxLines="4" font="font:MediumSystemFont" color="0xCCCCCCFF" />
            </Group>
        </Group>

        <!-- CONTENT ROWS -->
        <RowList 
            id="rowList" 
            translation="[0, 750]" 
            itemComponentName="MoviePosterItem" 
            itemSize="[1920, 400]" 
            rowHeights="[400]"
            rowItemSize="[ [240, 360] ]"
            rowItemSpacing="[ [30, 0] ]"
            rowLabelOffset="[ [100, 20] ]"
            focusXOffset="[ 100 ]"
            rowFocusAnimationStyle="floatingFocus"
        />
    </children>
</component>