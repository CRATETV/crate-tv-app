<?xml version="1.0" encoding="utf-8" ?>
<component name="HomeScene" extends="Group">
    <script type="text/brightscript" uri="pkg:/components/HomeScene.brs" />
    
    <children>
        <!-- DYNAMIC HERO BACKGROUND -->
        <Poster id="heroBg" width="1920" height="1080" loadDisplayMode="scaleToZoom" />
        <Rectangle width="1920" height="1080" color="#000000" opacity="0.6" /> <!-- Dimmer -->
        <Rectangle width="1920" height="1080" uri="pkg:/images/vignette.png" /> <!-- Cinematic Edge (Optional) -->

        <!-- HERO INFO (Title, Meta, Buttons) -->
        <Group id="heroGroup" translation="[100, 250]">
            <!-- We use a graphic title if available, otherwise text -->
            <Label id="heroTitle" width="900" color="#FFFFFF" font="font:BoldSystemFont" size="80" wrap="true" />
            
            <LayoutGroup layoutDirection="horiz" itemSpacings="[20]" translation="[0, 120]">
                <Label id="matchLabel" text="98% Match" color="#46d369" font="font:BoldSystemFont" size="24" />
                <Label id="yearLabel" text="2024" color="#dddddd" size="24" />
                <Rectangle width="40" height="26" color="#333333" cornerRadius="4">
                     <Label text="HD" width="40" height="26" horizAlign="center" size="18" color="#dddddd" />
                </Rectangle>
            </LayoutGroup>
            
            <Label id="heroDesc" width="800" color="#ffffff" size="24" maxLines="3" wrap="true" translation="[0, 170]" />
            
            <!-- Action Buttons -->
            <LayoutGroup layoutDirection="horiz" itemSpacings="[20]" translation="[0, 280]">
                <Rectangle id="btnPlay" width="180" height="60" color="#ffffff" cornerRadius="4">
                    <Label text="▶ Play" width="180" height="60" horizAlign="center" vertAlign="center" color="#000000" font="font:BoldSystemFont" size="28" />
                </Rectangle>
                <Rectangle id="btnInfo" width="220" height="60" color="#6d6d6e80" cornerRadius="4">
                    <Label text="ⓘ More Info" width="220" height="60" horizAlign="center" vertAlign="center" color="#ffffff" font="font:BoldSystemFont" size="28" />
                </Rectangle>
            </LayoutGroup>
        </Group>

        <!-- CONTENT ROWS -->
        <RowList 
            id="rowList" 
            translation="[0, 700]" 
            itemComponent="PosterItem" 
            numRows="2" 
            rowItemSize="[[266, 400]]" 
            rowItemSpacing="[[20, 0]]" 
            itemSize="[1920, 450]" 
            rowLabelOffset="[[100, 20]]" 
            focusXOffset="[100]" 
            showRowLabel="true" 
            rowFocusAnimationStyle="floatingFocus" 
        />
    </children>
</component>