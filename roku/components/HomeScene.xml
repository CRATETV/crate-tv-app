<?xml version="1.0" encoding="utf-8" ?>
<component name="HomeScene" extends="Scene">

    <script type="text/brightscript" uri="pkg:/components/HomeScene.brs" />

    <interface>
        <field id="content" type="node" onChange="onContentChange" />
        ' Command to send back to the router
        <field id="command" type="assocarray" />
    </interface>

    <children>
        <Poster 
            id="background"
            uri="pkg:/images/splash_hd.png" 
            width="1920" 
            height="1080"
        />
        <Rectangle color="0x000000B0" width="1920" height="1080" />
        
        <Label 
            id="loadingLabel"
            text="Loading Crate TV..."
            translation="[960, 540]"
            horizAlign="center"
            vertAlign="center"
            color="0xFFFFFFFF"
        >
            <font role="sans" size="30"/>
        </Label>
        
        <RowList
            id="categoryRowList"
            translation="[80, 150]"
            itemComponentName="MoviePoster" ' Default component
            itemSize="[240, 360]"
            rowItemSpacing="[ [30, 0] ]"
            numRows="1"
            rowHeights="[360]"
            rowLabelOffset="[ [0, -50] ]"
            rowFocusAnimationStyle="floatingFocus"
            visible="false"
        />

    </children>

</component>
