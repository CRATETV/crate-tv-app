<?xml version="1.0" encoding="utf-8" ?>
<component name="HomeScene" extends="Group">
    <script type="text/brightscript" uri="pkg:/components/HomeScene.brs" />
    <children>
        <!-- Hero Spotlight -->
        <Group id="hero">
            <Poster id="heroImage" width="1920" height="800" opacity="0.5" loadDisplayMode="scaleToFill" />
            <Rectangle width="1920" height="400" translation="[0, 400]" gradientDirection="top-to-bottom" color="0x05050500" endColor="0x050505FF" />
            <Label id="heroTitle" translation="[100, 500]" font="font:LargeBoldSystemFont" width="1000" />
        </Group>

        <RowList 
            id="rowList" 
            translation="[0, 650]" 
            itemComponentName="MoviePosterItem" 
            itemSize="[1920, 450]" 
            numRows="3" 
            rowItemSize="[ [300, 450] ]"
            rowItemSpacing="[ [30, 0] ]"
            rowLabelOffset="[ [100, 20] ]"
            focusXOffset="[ 100 ]"
        />
        
        <Task id="loadTask" uri="pkg:/components/ContentTask.xml" />
    </children>
</component>