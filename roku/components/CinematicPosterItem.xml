<?xml version="1.0" encoding="utf-8" ?>
<component name="CinematicPosterItem" extends="Group">
    <interface>
        <field id="itemContent" type="node" onChange="onContentChange" />
        <field id="width" type="float" value="320" />
        <field id="height" type="float" value="180" />
    </interface>
    <script type="text/brightscript" uri="pkg:/components/CinematicPosterItem.brs" />
    
    <children>
        <Poster id="poster" width="320" height="180" loadDisplayMode="scaleToFill" />
        <Animation id="focusAnim" duration="0.2" easeFunction="outCubic">
             <Vector2DFieldInterpolator fieldToInterp="poster.scale" key="[0.0, 1.0]" keyValue="[[1.0, 1.0], [1.15, 1.15]]" />
        </Animation>
    </children>
</component>
