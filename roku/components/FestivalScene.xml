<?xml version="1.0" encoding="utf-8" ?>
<component name="FestivalScene" extends="Scene">

    <script type="text/brightscript" uri="pkg:/components/FestivalScene.brs" />

    <interface>
        <field id="content" type="node" onChange="onContentChange" />
        <field id="command" type="assocarray" />
    </interface>

    <children>
        <Poster 
            id="background"
            uri="pkg:/images/splash_hd.png"
            width="1920"
            height="1080"
        />
        <Rectangle color="0x000000B0" width="1920" height="1080" />

        <Group id="contentGroup" translation="[80, 80]">
            <Label 
                id="festivalTitle"
                width="1760"
                wrap="true"
                font="font:LargeBoldSystemFont"
            />
            <Label 
                id="festivalDescription"
                width="1760"
                wrap="true"
                maxLines="3"
                translation="[0, 70]"
                font="font:SmallSystemFont"
            />

            <ButtonGroup
                id="daySelector"
                translation="[0, 180]"
                layoutDirection="horiz"
                itemSpacing="[20, 0]"
            />

            <RowList
                id="blocksRowList"
                translation="[0, 280]"
                itemComponentName="MoviePoster"
                itemSize="[240, 360]"
                rowItemSpacing="[ [30, 0] ]"
                numRows="1"
                rowHeights="[360]"
                rowLabelOffset="[ [0, -50] ]"
                rowFocusAnimationStyle="floatingFocus"
            />
        </Group>

    </children>

</component>