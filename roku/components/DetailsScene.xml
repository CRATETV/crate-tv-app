<?xml version="1.0" encoding="utf-8" ?>
<component name="DetailsScene" extends="Scene">
    <script type="text/brightscript" uri="pkg:/components/DetailsScene.brs" />
    <interface>
        <field id="content" type="node" onChange="onContentChange" />
    </interface>
    <children>
        <Rectangle color="0x050505FF" width="1920" height="1080" />
        <Poster id="backgroundPoster" width="1920" height="1080" opacity="0.2" />
        
        <Group id="detailsGroup" translation="[150, 200]">
            <Poster id="itemPoster" width="400" height="600" radius="20" />
            
            <Group id="infoGroup" translation="[480, 0]">
                <Label text="CRATE OFFICIAL SELECTION" font="font:ExtraSmallBoldSystemFont" color="0xEF4444FF" />
                <Label id="titleLabel" width="1000" wrap="true" font="font:LargeBoldSystemFont" translation="[0, 40]" />
                
                <Label id="metadataLabel" translation="[0, 140]" font="font:SmallSystemFont" color="0x888888FF" />
                
                <Group id="actionButtons" translation="[0, 200]">
                    <Rectangle id="playBtn" width="300" height="80" color="0xFFFFFFFF" radius="10">
                        <Label text="WATCH FILM" width="300" height="80" horizAlign="center" vertAlign="center" color="0x000000FF" font="font:SmallBoldSystemFont" />
                    </Rectangle>
                </Group>
                
                <Label id="synopsisLabel" width="900" wrap="true" maxLines="8" translation="[0, 320]" font="font:SmallSystemFont" color="0xCCCCCCFF" />
                
                <Label id="directorLabel" width="800" translation="[0, 560]" font="font:ExtraSmallBoldSystemFont" color="0x666666FF" />
            </Group>
        </Group>
    </children>
</component>