<?xml version="1.0" encoding="UTF-8"?>
<component name="HomeView" extends="Group">
    <interface>
        <!-- The ContentNode tree from APITask -->
        <field id="content" type="node" onChange="onContentSet" />
    </interface>

    <children>
        <!-- Hero area (big feature at the top) -->
        <Poster
            id="heroPoster"
            width="1920"
            height="600"
            translation="[0,0]"
        />

        <Label
            id="heroTitle"
            translation="[80, 100]"
            color="#FFFFFF"
            font="font:MediumBoldSystemFont"
        />

        <Label
            id="heroDesc"
            translation="[80, 180]"
            width="1000"
            color="#FFFFFF"
            font="font:SmallSystemFont"
        />

        <!-- Play / More Info buttons (simple text for now, can be replaced with images) -->
        <Label
    id="heroPlay"
    text="â–º Play"
    translation="[80, 320]"
    color="#FFFFFF" />

       <Label
    id="heroMoreInfo"
    text="More Info"
    translation="[220, 320]"
    color="#FFFFFF" />



        <!-- Single row for now: Top 10 etc. (you can add more later) -->
        <RowList
            id="rowList"
            translation="[80, 650]"
            itemSize="[300, 450]"
            numRows="1"
            showRowLabel="true"
        />
    </children>

    <script type="text/brightscript" uri="pkg:/components/HomeView.brs" />
</component>
