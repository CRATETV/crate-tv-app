<?xml version="1.0" encoding="utf-8" ?>
<component name="AccountLinkScene" extends="Group">
    <script type="text/brightscript" uri="pkg:/components/AccountLinkScene.brs" />
    <interface>
        <field id="loginSuccess" type="boolean" />
    </interface>
    <children>
        <Poster uri="pkg:/images/splash_hd.jpg" width="1920" height="1080" opacity="0.3" loadDisplayMode="scaleToZoom" />
        <Rectangle width="1920" height="1080" color="#000000" opacity="0.7" />
        
        <LayoutGroup translation="[960, 400]" horizAlignment="center" vertAlignment="center" itemSpacings="[20]">
            <Label text="Sign In to Crate TV" color="#FFFFFF" font="font:BoldSystemFont" size="60" />
            <Label text="1. Go to cratetv.net/link on your computer or phone" color="#AAAAAA" size="30" />
            <Label text="2. Enter this code:" color="#AAAAAA" size="30" />
            
            <!-- Code Display -->
            <Label 
                id="codeLabel" 
                text="LOADING..." 
                color="#E50914" 
                font="font:BoldSystemFont" 
                size="120" />
                
            <Label text="This screen will refresh automatically once linked." color="#666666" size="24" />
        </LayoutGroup>
        
        <Timer id="pollTimer" repeat="true" duration="5" />
    </children>
</component>