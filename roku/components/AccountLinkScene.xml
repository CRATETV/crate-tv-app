<?xml version="1.0" encoding="utf-8" ?>
<component name="AccountLinkScene" extends="Group">
    <script type="text/brightscript" uri="pkg:/components/AccountLinkScene.brs" />
    <interface>
        <field id="loginSuccess" type="boolean" />
    </interface>
    <children>
        <!-- Background Image -->
        <Poster uri="pkg:/images/splash_hd.jpg" width="1920" height="1080" opacity="0.3" />
        
        <LayoutGroup translation="[960, 400]" horizAlignment="center" vertAlignment="center">
            <Label text="Sign In to Crate TV" color="#FFFFFF" font="font:BoldSystemFont" size="60" />
            <Label text="Go to cratetv.net/link on your phone or computer" color="#AAAAAA" size="30" translation="[0, 20]" />
            <Label text="Enter the code below:" color="#AAAAAA" size="30" translation="[0, 10]" />
            
            <Label 
                id="codeLabel" 
                text="LOADING..." 
                color="#E50914" 
                font="font:BoldSystemFont" 
                size="120" 
                translation="[0, 50]" />
                
            <Label text="This screen will update automatically." color="#666666" size="24" translation="[0, 50]" />
        </LayoutGroup>
        
        <Timer id="pollTimer" repeat="true" duration="5" />
    </children>
</component>
