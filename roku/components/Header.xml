
<?xml version="1.0" encoding="utf-8" ?>
<component name="Header" extends="Group">
    <interface>
        <field id="itemSelected" type="integer" alwaysNotify="true" />
    </interface>
    
    <script type="text/brightscript">
        sub init()
            m.menu = m.top.findNode("menu")
            m.menu.observeField("itemSelected", "onSelect")
        end sub
        sub onSelect()
            m.top.itemSelected = m.menu.itemSelected
        end sub
    </script>
    
    <children>
        <!-- Spaced Menu: 600px per item ensures no truncation for long labels like THE PUBLIC SQUARE -->
        <LabelList 
            id="menu" 
            translation="[80, 0]" 
            itemSize="[600, 60]" 
            orientation="horizontal" 
            textSelectedColor="0xFFFFFFFF"
            textColor="0x666666FF"
        >
            <content>
                <ContentNode>
                    <ContentNode title="HOME" />
                    <ContentNode title="THE PUBLIC SQUARE" />
                    <ContentNode title="SEARCH" />
                    <ContentNode title="MY ACCOUNT" />
                </ContentNode>
            </content>
        </LabelList>

        <Label text="CRATE TV" translation="[1700, 0]" color="0xEF4444FF" font="font:LargeBoldSystemFont" />
    </children>
</component>
