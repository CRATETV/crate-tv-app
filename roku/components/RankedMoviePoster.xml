<?xml version="1.0" encoding="utf-8" ?>
<component name="RankedMoviePoster" extends="Group">
    <script type="text/brightscript" uri="pkg:/components/RankedMoviePoster.brs" />
    <interface>
        <field id="itemContent" type="node" onChange="onContentChange" />
        <field id="focusPercent" type="float" onChange="onFocusChange" />
        <field id="rowItemIndex" type="integer" />
    </interface>
    <children>
        <Rectangle 
            id="focusRing"
            color="0x8B5CF6FF"
            width="462" 
            height="265"
            translation="[-6, -6]"
            visible="false"
        />
        <Group id="contentGroup">
            ' Gradient to match webapp style
            <Rectangle
                id="background"
                color="0x000000FF"
                width="450"
                height="253"
            />
            <Rectangle
                id="gradient"
                color="0x000000FF"
                endColor="0x00000000"
                gradient="linear"
                gradientDirection="left-right"
                width="300"
                height="253"
            />

            ' Large rank number on the left
            <Label
                id="rankLabel"
                horizAlign="center"
                vertAlign="center"
                height="253"
                width="200"
                translation="[-15, 0]"
            >
                <font role="sans" size="180" weight="bold" />
            </Label>
            
            ' Poster snippet on the right
            <Poster
                id="tilePoster"
                width="250"
                height="253"
                translation="[200, 0]"
            />
            
            ' Film title
            <Label
                id="titleLabel"
                width="180"
                height="60"
                wrap="true"
                vertAlign="bottom"
                translation="[15, 180]"
                font="font:SmallBoldSystemFont"
            />
        </Group>

        <Animation 
            id="scaleAnimation"
            duration="0.2"
            easeFunction="linear"
        />

    </children>
</component>