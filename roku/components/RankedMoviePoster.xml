
<?xml version="1.0" encoding="utf-8" ?>
<component name="RankedMoviePoster" extends="Group">

    <script type="text/brightscript" uri="pkg:/components/RankedMoviePoster.brs" />

    <interface>
        <field id="itemContent" type="node" onChange="onContentChange" />
        <field id="focusPercent" type="float" onChange="onFocusChange" />
        <field id="rowItemIndex" type="integer" />
    </interface>

    <children>
        <Group id="contentGroup">
            <Label
                id="rankLabel"
                horizAlign="left"
                vertAlign="center"
                height="360"
                width="200"
                color="0x222222FF"
            >
                <font role="sans" size="180" weight="bold" />
            </Label>
            
            <Poster
                id="tilePoster"
                width="240"
                height="360"
                translation="[100, 0]"
            />

            <!-- Snug Focus Ring: Centered for 4px border (X: 100-4=96, Y: 0-4=-4) -->
            <Rectangle 
                id="focusRing"
                color="0xEF4444FF"
                width="248"
                height="368"
                translation="[96, -4]"
                visible="false"
            />
        </Group>
    </children>

</component>
