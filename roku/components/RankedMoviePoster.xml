            <Label
                id="rankLabel"
                font="font:LargeBoldSystemFont"
                horizAlign="center"
                vertAlign="center"
                height="253"
                width="200"
            />
            <Poster
                id="tilePoster"
                width="240"
                height="253"
                translation="[210, 0]"
            />
        </Group>
    </children>
</component>