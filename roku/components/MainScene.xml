
<?xml version="1.0" encoding="utf-8" ?>
<component name="MainScene" extends="Scene">
    <interface>
        <!-- The configuration manifest passed from Main() -->
        <field id="config" type="assocarray" />
        <!-- Launch Arguments for Deep Linking (Requirement 5.1) -->
        <field id="launchArgs" type="assocarray" />
    </interface>
    
    <script type="text/brightscript" uri="pkg:/components/MainScene.brs" />
    
    <children>
        <!-- Pure Black Cinematic Base -->
        <Rectangle width="1920" height="1080" color="0x050505FF" />

        <!-- Initialized as hidden to prevent text flashes -->
        <Header id="navBar" translation="[0, 40]" visible="false" />

        <!-- Viewport hidden until data sync -->
        <Group id="viewport" translation="[0, 160]" visible="false" />

        <LoadingIndicator 
            id="spinner" 
            visible="true" 
            translation="[960, 540]" 
            fadeInterval="0.5"
        />
    </children>
</component>
