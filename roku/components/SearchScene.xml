
<?xml version="1.0" encoding="utf-8" ?>
<component name="SearchScene" extends="Group">
    <script type="text/brightscript" uri="pkg:/components/SearchScene.brs" />
    <children>
        <Group translation="[100, 40]">
            <!-- Left Panel (1/3): Keyboard & Categories -->
            <Group id="leftPanel">
                <!-- V4 Hardened Keyboard: Explicitly setting key colors for focus feedback -->
                <Keyboard 
                    id="keyboard" 
                    keyColor="0xAAAAAAFF" 
                    focusedKeyColor="0xEF4444FF" 
                    buttons="[ 'Search', 'Clear' ]"
                    textEditBoxTextColor="0xFFFFFFFF"
                />
                
                <Label text="CATEGORIES" translation="[0, 440]" font="font:SmallestBoldSystemFont" color="0x444444FF" />
                <LabelList 
                    id="genreShortcuts" 
                    translation="[0, 480]" 
                    itemSize="[500, 50]" 
                    textColor="0x666666FF"
                    textFocusedColor="0xFFFFFFFF"
                >
                    <content>
                        <ContentNode>
                            <ContentNode title="Action & Thrillers" />
                            <ContentNode title="Independent Drama" />
                            <ContentNode title="Documentary Archive" />
                            <ContentNode title="The Public Square" />
                        </ContentNode>
                    </content>
                </LabelList>
            </Group>
            
            <!-- Right Panel (2/3): Recommendations Grid -->
            <Group id="resultsGroup" translation="[700, 0]">
                <Label 
                    id="resultsHeader" 
                    text="Global Discovery Manifest" 
                    font="font:MediumBoldSystemFont" 
                    color="0x444444FF" 
                />
                
                <!-- Increased spacing and standardized size for grid consistency -->
                <PosterGrid 
                    id="resultsGrid" 
                    translation="[0, 80]" 
                    basePosterSize="[240, 360]" 
                    numColumns="4" 
                    itemSpacing="[30, 30]" 
                    captionDisplayMode="none"
                />
            </Group>
        </Group>
    </children>
</component>
